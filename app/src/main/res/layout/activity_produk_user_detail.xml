<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iak.ali.mycrud.ProdukUserDetail">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_produk_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/hrg_produk_detail"
        style="@style/TextContent.Black"
        android:textSize="32sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/nm_produk_detail"
        style="@style/TextContent.Black"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextContent.Subtitle"
        android:text="@string/stok"/>
    <TextView
        android:id="@+id/stok_produk_detail"
        style="@style/TextContent.Subtitle"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextContent.Subtitle"
        android:text="@string/deskripsi_produk"/>
    <TextView
        android:id="@+id/edt_deskripsi"
        style="@style/TextContent"
        android:layout_marginBottom="8dp"/>
    </LinearLayout>

</ScrollView>
